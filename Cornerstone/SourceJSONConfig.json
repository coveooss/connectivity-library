{
    "Services": [
    {
      "Authentication": {
        "OAuth": {
          "Query": {
            "RefreshUrl": "https://<customer>.csod.com/services/api/oauth2/token",
            "Method": "POST",
            "Parameters": {
              "grant_type": {
                "Type": "Payload",
                "Value": "client_credentials"
              },
              "client_id": {
                "Type": "Payload",
                "Value": "@ClientId"
              },
              "client_secret": {
                "Type": "Payload",
                "Value": "@ClientSecret"
              },
              "scope": {
                "Type": "Payload",
                "Value": "training:read"
              }
            }
          },
          "Response": {
            "AccessToken": "access_token",
            "SupportsRefreshToken": "false",
            "ExpiresIn": "expires_in",
            "TokenType": "token_type",
            "RefreshToken": "refresh_token"
          }
        }
      },
      "Url": "https://<customer>.csod.com",
      "Paging": {
        "PageSize": 200,
        "OffsetStart": 1,
        "OffsetType": "page",
        "Parameters": {
          "Limit": "limit",
          "Offset": "PageNumber"
        },
        "TotalCountKey": "totalRecords"
      },
      "Endpoints": [
        {
          "Path": "/services/api/Catalog/GlobalSearch",
          "Method": "GET",
          "ItemType": "Course",
          "ItemPath": "data",
          "Headers": {
            "Accept": "application/json"
          },
          "QueryParameters": {
            "Provider": "Technology"
          },
          "Uri": "%[coveo_url]/%[ObjectId]",
          "ClickableUri": "%[coveo_url]/%[ObjectId]",
          "Title": "%[Title]",
          "ModifiedDate": "%[createdate]",
          "Body": "<html><body>%[description]</body></html>",
          "Metadata": {
            "objectid": "%[ObjectId]",
            "description": "%[Description]",
            "createdate": "%[CreateDate]",
            "provider": "%[provider]",
            "trainingsubtype": "%[TrainingSubType]",
            "duration": "%[Duration]",
            "version": "%[Version]",
            "modifydate": "%[ModifyDate]"
          }
        }
      ]
    }
  ]
}